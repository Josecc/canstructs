{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^5.5.1",
    "nx": "^14.7.8"
  },
  "scripts": {
    "build": "npx lerna run build",
    "publish": "lerna publish from-git --no-private --verify-access --force-publish",
    "version": "lerna version --no-private"
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    }
  }
}
